<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title><%= @title %></title>
</head>

<body>
  <ul>
    <% @files.each do |file| %>
      <li>
        <a href='<%= file %>'><%= file %></a><br />
      </li>
    <% end %>
  </ul>

  <p>
    <% if params[:sort] == 'desc' %>
      <a href='/'>Sort Ascending</a>
    <% else %>
      <a href='/?sort=desc'>Sort Descending</a>
    <% end %>
  </p>
  
</body>
</html>
