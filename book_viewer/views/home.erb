<h2 class="content-subhead">Table of Contents</h2>

<div class="pure-menu">
  <ul class="pure-menu-list">
    <% @toc.each_with_index do |chap, index| %>
      <li class="pure-menu-item">
        <a href="chapters/<%= index + 1 %>" class="pure-menu-link"><%= chap %></a>
      </li>
    <% end %>
  </ul>
</div>
